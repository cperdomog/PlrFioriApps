                            <Column>
                                <Label text="Aprobador"/>
                            </Column>
                            <Column visible="false">
                                <Label text="nAprob"/>
                            </Column>
                            <Column visible="false">
                                <Label text="Estatus"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem type="Navigation" press="onListVacaRejecPress">
                                <cells>
                                    <ObjectNumber number="{listvacarejec>Diasd}" textAlign="Right" state="Success"></ObjectNumber>
                                    <Text text="{listvacarejec>Fecin1}"/>
                                    <Text text="{listvacarejec>Fecfi1}"/>
                                    <Text text="{listvacarejec>Namap}"/>
                                    <Text text="{listvacarejec>Aprob}" visible="false"/>
                                    <Text text="{listvacarejec>Estat}" visible="false"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </IconTabFilter>
            </items>
        </IconTabBar>
    </Page>
    <Page id="pageMessage" title="{i18n>title}" visible="false">
    <MessagePage showHeader="false"
				 text="Servicio no disponible"
				 enableFormattedText="true"
                 description=" "				 
				 icon="sap-icon://message-warning">
    </MessagePage>
    </Page>
</mvc:View>
