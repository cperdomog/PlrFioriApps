<mvc:View controllerName="polar.zui5myvacareq.controller.DetailVacationRequest"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <IconTabBar id="_IDGenIconTabBar1" class="sapUiSmallMarginBottom sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter id="_IDGenIconTabFilter1" text="SOLICITUD DE VACACIONES">
                        <f:SimpleForm id="_IDGenSimpleForm1" minWidth="1024" maxContainerCols="2" layout="ResponsiveGridLayout">
                            <f:title>
                                <core:Title id="_IDGenTitle1" text="{i18n>title}" />
                            </f:title>
                            <Label id="_IDGenLabel1" text="Fecha de inicio de vacaciones" labelFor="id_inivac"/>
                            <DatePicker id="id_inivac" placeholder="{i18n>phdate}" class="sapUiSmallMarginBottom"/>
                            <Label id="_IDGenLabel8" text="Fecha fin de vacaciones" labelFor="id_finvac"/>
                            <DatePicker id="id_finvac" editable="false" class="sapUiSmallMarginBottom"/>
                            <Label id="_IDGenLabel2" text="Días de disfrute" labelFor="id_absdays"/>
                            <Input id="id_absdays"  type="Number" liveChange="onNumber"/>
                            <Label id="_IDGenLabel3" text="Vacaciones en dinero" labelFor="id_selldays"/>
                            <Input id="id_selldays"  type="Number" liveChange="onNumber"/>
                            <Label id="_IDGenLabel4" text="Autorizador" labelFor="id_aprov"/>
                            <Input id="id_nameAprov" type="Text" editable="false"/>
                        </f:SimpleForm>
                    </IconTabFilter>
                    <IconTabFilter id="_IDGenIconTabFilter2" text="VACACIONES PERMITIDAS">
                        <Table id="tableQuota" items="{path: 'listquota>/results'}">
                            <columns>
                                <Column id="_IDGenColumn1">
                                    <Label id="_IDGenLabel5" text="Período"/>
                                </Column>
                                <Column id="_IDGenColumn2" minScreenWidth="Tablet">
                                    <Label id="_IDGenLabel6" text="Días disponibles"/>
                                </Column>
                                <Column id="_IDGenColumn3" minScreenWidth="Tablet">
                                    <Label id="_IDGenLabel7" text="Fecha disponible" textAlign="Right"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem id="_IDGenColumnListItem1">
                                    <cells>
                                        <Text id="_IDGenText1" text="{listquota>Perid}"/>
                                        <ObjectNumber id="_IDGenObjectNumber2" number="{path: 'listquota>Diasd', type: 'sap.ui.model.type.Integer', formatOptions: { decimals: 0, maxIntegerDigits:2}}" textAlign="Right" state="Success"></ObjectNumber>
                                        <Text id="_IDGenText3" text="{path: 'listquota>Fecdi', type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'dd/MM/yyyy'}}"/>   
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
        <footer>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer2"/>
                <Button id="BtnValid" text="Validar" type="Default"  icon="sap-icon://check-availability" press="onValidateVacation"/>
                <Button id="BtnEdit" text="Editar" type="Emphasized"  icon="sap-icon://edit" press="onEditMode"/>
                <Button id="BtnSave" text="Grabar" type="Emphasized" icon="sap-icon://save" press="onSendVacation"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
