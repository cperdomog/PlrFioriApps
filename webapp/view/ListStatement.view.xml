<mvc:View controllerName="polar.zui5statement.controller.ListStatement"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="pageListStatement" title="{i18n>title}" visible="false">
        <Table id="tableSalaryStatement" items="{path: 'liststatement>/results', sorter:{path: 'liststatement>Seqnr', descending: true}}">
            <headerToolbar>
                <Toolbar>
                    <ToolbarSpacer/>
                    <SearchField id="searchField" tooltip="{i18n>periodo}" search="onFilterPeriodos" width="auto" class="sapUiSmallMargin"></SearchField>
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Label text="{i18n>periodo}"/>
                </Column>
                <Column minScreenWidth="Tablet">
                    <Label text="{i18n>tpago}"/>
                </Column>
                <Column>
                    <Label text="{i18n>neto}" textAlign="Right"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Navigation" press="onListStatementPress">
                    <cells>
                        <Text text="{liststatement>Perio}"/>
                        <Text text="{liststatement>Motiv}"/>
                        <ObjectNumber number="{liststatement>Netop}" textAlign="Right" state="Success"></ObjectNumber>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
    <Page id="pageMessage" title="{i18n>title}" visible="false">
    <MessagePage showHeader="false"
				 text="Servicio no disponible"
				 enableFormattedText="true"
                 description=" "				 
				 icon="sap-icon://message-warning">
    </MessagePage>
    </Page>
</mvc:View>
